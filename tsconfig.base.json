{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@mobula/home": ["libs/home/feature/src/index.ts"],
      "@mobula/layout": ["libs/shell/ui/layout/src/index.ts"],
      "@mobula/main-view": ["libs/shell/ui/main-view/src/index.ts"],
      "@mobula/mobula-shell": ["libs/shell/feature/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
